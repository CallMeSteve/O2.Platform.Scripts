var codeSnippet = 
@"Action&lt;string&gt; openInAllBrowsers =
	(url)=&gt; {
				chrome.Navigate().GoToUrl(url);
				firefox.Navigate().GoToUrl(url);
				ie.Navigate().GoToUrl(url);
			};
